<!DOCTYPE html>
<html>
	<head>
		<script>
			function confirm_activation(isactive){
				var result;
				if(isactive == 1)
				{
					result = window.confirm('Do you really want to activate this user.');				
				}
				else
				{
					result = window.confirm('Do you really want to deactivate this user.');
				}
				
				return result;
			}
		</script>			
	</head>
	<body>
		<div id="wrapper">
			<%= render partial: "/layouts/header" %>

			<div id="main-content-wrapper">
				<div class="browser-center">
					<div class="review-block-wrapper">
					<div class="page-heading">
						Manage Site Content
						<div style="float:right;">
								<form id="getSelectedReview" action="<%= sitecontent_ManageTestimonialsPage_url %>" method="post">
								<input type="submit" name="Submit" id="Submit" value="GO BACK TO MANAGE TESTIMONIALS" class="org-bt" />
								</form>	
							</div>
					</div>
						
						<div id="singup-form-area">
							<div class="singup-form-heading">
								<h1>Add Testimonial</h1>
							</div>

							<div class="singup-form">
								<div id="SignupForm">
									<form action="<%= sitecontent_AddUpdateTestimonialsPage_url %>" method="post">
										
										<div class="singup-textarea">
											<div class="label">First Name</div>
											<input type="text" name="textFirstName" id="textFirstName" required="true" class="singup-textbox-small" value="<%= @firstName %>" />
										</div>
										<div class="singup-textarea">
											<div class="label">Last Name</div>
											<input type="text" name="textLastName" id="textLastName" required="true" class="singup-textbox-small" />
										</div>
										<div class="singup-textarea">
											<div class="label">Occupation</div>
											<input type="text" name="textOccupation" id="textOccupation" required="true" class="singup-textbox" />
										</div>
										<div class="singup-textarea">
											<div class="label">Comments</div>
											<textarea id="textComment" name="textComment" rows="10" cols="103"></textarea>
										</div>
										
										<div style="width:100px">&nbsp;</div>	
													
										<div class="singup-textarea">
											<input type="hidden" name="hidTestID" id="hidTestID" value="<%= @testID %>" />
										<input type="submit" name="Submit" id="Submit" value="Save" class="org-bt" />
										</div>
									</form>
									
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>

			<%= render partial: "/layouts/footer" %>

		</div>
	</body>
</html>
