<!DOCTYPE html>
<html>
	<head>
		<script type="text/javascript">
			$(document).ready(function() {
				$('#tbSubUser').dataTable({
					"sPaginationType" : "full_numbers",
					"iDisplayLength" : 25,
					"aLengthMenu" : [25, 50, 100, 200],
					//"sDom": '<"top"lf>rt<"bottom"ip><"clear">'
					"oLanguage": {
        				"sEmptyTable" : "No Records found."
    				}
				});
			});
			function ViewSearchBy(custID) {
				var eID = '#frmSearchBy' + custID
				$(eID).submit();
			}
		</script>
	</head>
	<body>
		<div id="wrapper">
			<%= render partial: "/layouts/header" %>

			<div id="main-content-wrapper">
				<div class="browser-center">
					<div class="review-block-wrapper">
						<div class="page-heading">Reports</div>

						<div id="singup-form-area">
							<div class="singup-form-heading">
								<h1>
									<div>Customer Search Report</div>
									<% if(flash[:notice] != nil) %>
									<div id="messageDiv" class="success">
									<%= flash[:notice] %>
									</div>
									<% end %>
									</h1>
									
									<div style="margin-top: 20px; float: left;">
									<form id="frmGetReviewsFilter" action="<%= reports_CustomerSearchReport_url %>" method="post">
										<div class="singup-textarea">
											<input name="txtFirstName" type="text" class="singup-textbox-small" maxlength="20" id="txtFirstName" placeholder="First Name" value="<%= @firstName %>" pattern="^[A-Za-z]+[A-Za-z]$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Steve]')" oninput="setCustomValidity('')" />
										</div>
										<div class="singup-textarea">
											<input name="txtLastName" type="text" class="singup-textbox-small" maxlength="20" id="txtLastName" placeholder="Last Name" value="<%= @lastName %>" pattern="^[A-Za-z]+[A-Za-z]$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Steve]')" oninput="setCustomValidity('')" />
										</div>
										<div class="singup-textarea">
											<input name="txtStreetAddress" type="text" class="singup-textbox-small" maxlength="100" id="txtStreetAddress" placeholder="Street Address" value="<%= @streetAddress %>" pattern="^[A-Za-z0-9 ,]+$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [11111, Street Address]')" oninput="setCustomValidity('')" />
										</div>
										<div class="singup-textarea">
											<input name="selectCity" type="text" autocomplete="off" class="singup-textbox-small" maxlength="20" id="selectCity" placeholder="City, State" value="<%= @cityState %>" pattern="^[A-Za-z]+[ ]?[A-Za-z]+,[ ][A-Za-z]{2,2}$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Seattle, WA] ')" oninput="setCustomValidity('')" />
										</div>
										<div class="singup-textarea">
											<input name="txtZipCode" type="text" class="singup-textbox-small" id="txtZipCode" maxlength="6" placeholder="Zipcode" value="<%= @zipCode %>" pattern="^[0-9]+[0-9]$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [123456] ')" oninput="setCustomValidity('')" />
										</div>
										<div class="singup-textarea">
											<input name="txtPhoneNumber" type="text" class="singup-textbox-small" id="txtPhoneNumber" maxlength="12" placeholder="Phone Number" value="<%= @phoneNumber %>" pattern="^[0-9]{3,3}[-]?[0-9]{3,3}[-]?[0-9]{4,4}$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [1234567890 or 123-456-7890] ')" oninput="setCustomValidity('')" />
										</div>
										
										<div class="singup-textarea">
											<input type="submit" name="Submit" id="Submit" value="FILTER SEARCH" class="org-bt-small" />
										</div>
										
									</form>
								</div>
								
								<div style="margin-top: -40px; margin-left: 560px; float: left;">
									<form id="frmGetReviewsFilter" action="<%= reports_CustomerSearchReport_url %>" method="post">
										
										<div class="singup-textarea">
											<input type="hidden" id="hidSetFilter" name="hidSetFilter" value="1" />
											<input type="submit" name="Submit" id="Submit" value="RESET FILTER" class="org-bt-small" />
										</div>
									</form>
								</div>
							</div>

							<div class="singup-form">
								<div id="SignupForm">
									<% if(!@custSearchDetails.blank?) %>

									<table id="tbSubUser" style="width: 100%">
										<thead>
											<tr>
												<th align="left" width = "11%">First Name</th>
												<th align="left" width = "11%">Last Name</th>
												<th align="left" width = "22%">Address</th>
												<th align="left" width = "10%">City</th>
												<th align="left" width = "6%">State</th>
												<th align="left" width = "9%">ZipCode</th>
												<th align="left" width = "15%">Contact Number</th>
												<th align="left" width = "8%">Search Count</th>
												<th align="left" width = "8%">Details</th>
											</tr>
										</thead>

										<tbody>
											<% @custSearchDetails.each do |cust| %>
											<tr>
												<td width = "11%"><%= cust.FirstName %></td>
												<td width = "11%"><%= cust.LastName %></td>
												<td width = "22%"><%= cust.StreetAddress %></td>
												<td width = "10%"><%= cust.City %></td>
												<td width = "6%"><%= cust.State %></td>
												<td width = "9%"><%= cust.ZipCode %></td>
												<td width = "15%"><%= cust.ContactNumber %></td>
												<td width = "8%"><%= cust.count %></td>
												<td width = "8%" align="center">
													<diV style="float: left; margin-left: 20px">
														<form id="frmSearchBy<%= cust.id %>" action="<%= reports_ViewCustomerSearchBy_url %>" method="post">
															<input type="hidden" name="hidCustID" id="hidCustID" value="<%= cust.id %>" />
															</form>
														<a id="linkVewHistory" href="#" onclick="ViewSearchBy(<%= cust.id %>);">View</a>
													</diV>
												</td>
												</tr>
											<% end %>
										</tbody>

									</table>

									<% else %>
									No Records found.
									<% end %>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>

			<%= render partial: "/layouts/footer" %>

		</div>
	</body>
</html>
